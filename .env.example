# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your_openai_api_key_here

# Backend API Configuration
# Frontend API URL (for React/Vite)
VITE_API_URL=http://localhost:3001
VITE_USE_API=true

# ElevenLabs Voice API Configuration (Optional - for premium TTS)
# Get your API key from: https://elevenlabs.io
VITE_ELEVENLABS_API_KEY=sk_your_api_key_here
VITE_USE_ELEVENLABS=true
VITE_ELEVENLABS_MODEL=eleven_monolingual_v1

# Voice Feature Flags
VITE_VOICE_PRACTICE_ENABLED=true
VITE_VOICE_API_PROVIDER=elevenlabs

# Speech Recognition Configuration
VITE_SPEECH_RECOGNITION_LANG=en-US
VITE_SPEECH_RECOGNITION_CONTINUOUS=true
VITE_SPEECH_RECOGNITION_INTERIM_RESULTS=true

# Audio Configuration
VITE_AUDIO_AUTOPLAY=true
VITE_AUDIO_VOLUME=1.0

# Firebase Configuration (if using Firebase)
VITE_FIREBASE_API_KEY=your_firebase_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id

# Backend Firebase Configuration (for server.js)
FIREBASE_API_KEY=your_firebase_key
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project.firebasestorage.app
FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
FIREBASE_APP_ID=your_firebase_app_id

# Anthropic Claude API (Legacy - kept for backwards compatibility)
# Note: Project now uses OpenAI by default
ANTHROPIC_API_KEY=sk-ant-api03-your_key_here
